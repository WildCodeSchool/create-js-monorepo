{
  "name": "{{name}}",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "homepage": "https://github.com/WildCodeSchool/{{name}}#readme",
  "bugs": {
    "url": "https://github.com/WildCodeSchool/{{name}}/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WildCodeSchool/{{name}}.git"
  },
  "workspaces": ["client", "server"],
  "scripts": {
    "check": "biome check --error-on-warnings --staged .",
    "clean": "node ./bin/clean",
    "db:migrate": "npm run db:migrate --workspace=server",
    "db:seed": "npm run db:seed --workspace=server",
    "dev": "concurrently -c green,yellow -t \"HH:mm:ss\" -p \"{name} {time}\" \"npm:dev:*\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "prepare": "husky || true",
    "test": "npm run test --workspaces --if-present"
  },
  "keywords": [],
  "author": "WildCodeSchool",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "concurrently": "^8.2.2",
    "husky": "^9.0.11",
    "validate-branch-name": "^1.3.0"
  }
}
